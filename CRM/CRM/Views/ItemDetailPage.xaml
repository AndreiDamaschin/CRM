<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CRM.Views.ItemDetailPage"
             Title="{Binding Title}">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="{Binding Name}" FontSize="Medium"/>
        <Label Text="{Binding Email}" FontSize="Medium"/>
        <Switch x:Name="Toggle" HorizontalOptions="Start" IsToggled="{Binding Toggle}" />
        <Editor x:Name="Text" Text="{Binding Text}"/>
        <Button x:Name="Submit" Text="Submit"/>
        <Label x:Name="TouchUpNotification" FontSize="Title"/>
    </StackLayout>
    
</ContentPage>